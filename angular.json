{
  "$schema": "./node_modules/@angular/cli/lib/config/schema.json",
  "version": 1,
  "newProjectRoot": "",
  "projects": {
    "sim": {
      "projectType": "application",
      "schematics": {
        "@nrwl/angular:component": {
          "style": "scss"
        }
      },
      "root": "apps/sim",
      "sourceRoot": "apps/sim/src",
      "prefix": "mi-mono-repo",
      "architect": {
        "build": {
          "builder": "@angular-devkit/build-angular:browser",
          "options": {
            "outputPath": "dist/apps/sim",
            "index": "apps/sim/src/index.html",
            "main": "apps/sim/src/main.ts",
            "polyfills": "apps/sim/src/polyfills.ts",
            "tsConfig": "apps/sim/tsconfig.app.json",
            "aot": true,
            "assets": ["apps/sim/src/favicon.ico", "apps/sim/src/assets"],
            "styles": ["apps/sim/src/styles.scss"],
            "scripts": []
          },
          "configurations": {
            "production": {
              "fileReplacements": [{
                "replace": "apps/sim/src/environments/environment.ts",
                "with": "apps/sim/src/environments/environment.prod.ts"
              }],
              "optimization": true,
              "outputHashing": "all",
              "sourceMap": false,
              "extractCss": true,
              "namedChunks": false,
              "extractLicenses": true,
              "vendorChunk": false,
              "buildOptimizer": true,
              "budgets": [{
                  "type": "initial",
                  "maximumWarning": "2mb",
                  "maximumError": "5mb"
                },
                {
                  "type": "anyComponentStyle",
                  "maximumWarning": "6kb",
                  "maximumError": "10kb"
                }
              ]
            }
          }
        },
        "serve": {
          "builder": "@angular-devkit/build-angular:dev-server",
          "options": {
            "browserTarget": "sim:build"
          },
          "configurations": {
            "production": {
              "browserTarget": "sim:build:production"
            }
          }
        },
        "extract-i18n": {
          "builder": "@angular-devkit/build-angular:extract-i18n",
          "options": {
            "browserTarget": "sim:build"
          }
        },
        "lint": {
          "builder": "@angular-devkit/build-angular:tslint",
          "options": {
            "tsConfig": [
              "apps/sim/tsconfig.app.json",
              "apps/sim/tsconfig.spec.json"
            ],
            "exclude": ["**/node_modules/**", "!apps/sim/**/*"]
          }
        },
        "test": {
          "builder": "@nrwl/jest:jest",
          "options": {
            "jestConfig": "apps/sim/jest.config.js",
            "tsConfig": "apps/sim/tsconfig.spec.json",
            "passWithNoTests": true,
            "setupFile": "apps/sim/src/test-setup.ts"
          }
        }
      }
    },
    "sim-e2e": {
      "root": "apps/sim-e2e",
      "sourceRoot": "apps/sim-e2e/src",
      "projectType": "application",
      "architect": {
        "e2e": {
          "builder": "@nrwl/cypress:cypress",
          "options": {
            "cypressConfig": "apps/sim-e2e/cypress.json",
            "tsConfig": "apps/sim-e2e/tsconfig.e2e.json",
            "devServerTarget": "sim:serve"
          },
          "configurations": {
            "production": {
              "devServerTarget": "sim:serve:production"
            }
          }
        },
        "lint": {
          "builder": "@angular-devkit/build-angular:tslint",
          "options": {
            "tsConfig": ["apps/sim-e2e/tsconfig.e2e.json"],
            "exclude": ["**/node_modules/**", "!apps/sim-e2e/**/*"]
          }
        }
      }
    }
  },
  "cli": {
    "warnings": {
      "typescriptMismatch": false,
      "versionMismatch": false
    },
    "defaultCollection": "@nrwl/angular"
  },
  "schematics": {
    "@nrwl/angular:application": {
      "unitTestRunner": "jest",
      "e2eTestRunner": "cypress"
    },
    "@nrwl/angular:library": {
      "unitTestRunner": "jest"
    },
    "@schematics/angular:component": {
      "style": "scss",
      "spec": false
    },
    "@schematics/angular:module": {
      "spec": false
    }
  },
  "defaultProject": "sim"
}
